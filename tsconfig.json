{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": [
      "vite/client",
      "element-plus/global"
    ],
    "baseUrl": ".",
    "paths":{
      "@/*":["src/*"],
      "@@/*":["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue","mock/**/*.ts","types/**/*.ts","types/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
